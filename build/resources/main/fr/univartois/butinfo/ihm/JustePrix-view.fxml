<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: FF5733;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.ihm.JustePrixController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="question" text="question">
      <font>
         <Font size="24.0" />
      </font></Label>
   <Label fx:id="hint" text="hint">
      <font>
         <Font size="23.0" />
      </font></Label>
   <TextField fx:id="textInput" onAction="#entreeButtonClick" />
   <Button fx:id="button" mnemonicParsing="false" onAction="#onButtonClick" text="Button" />

    <Label fx:id="welcomeText" />
   <Label fx:id="counterLabel" style="-fx-background-color: red;" text="counter">
      <font>
         <Font size="33.0" />
      </font></Label>
</VBox>
